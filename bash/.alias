}

mypwd()
{
  curd=`pwd`
  if [ ! -z "$1" ]; then 
    if [ -e $1 ] ; then 
      cd $1
      tgt=`pwd`
    else
      echo "target directory $1 not exist"
    fi
  fi
  echo $tgt
}

