mypwd()
{
  curd=`pwd`
  if [ ! -z "$1" ]; then 
    if [ -e $1 ] ; then 
      cd $1
      tgt=`pwd`
    else
      echo "target directory $1 not exist"
    fi
  fi
  echo $tgt
}


# gsutil related
gsedit()
{
  BRed='\033[1;31m'
  NC='\033[0m'
  name=$(basename $1)
  tmpfile=$(mktemp -p /tmp/gsutil -t ${name})
  gsutil cp $1 $tmpfile
  echo -e "copy ${BRed}$1${NC} to ${BRed}${tmpfile}${NC}"
  vim ${tmpfile}
}

gsrm () {
  gsutil -m rm $*
}
